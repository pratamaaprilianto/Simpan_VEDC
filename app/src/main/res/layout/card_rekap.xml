<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_rekap_oke">
        <TextView
            android:id="@+id/no_rekapp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="@font/segoeui"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:text="0215/B17.2/KP/2020"
            android:textColor="@color/blue"
            android:textSize="17dp"/>
        <TextView
            android:id="@+id/ket_rekap"
            android:paddingTop="0dp"
            android:paddingLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Dinas Luar"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/blue"
            android:textSize="16dp">
        </TextView>
        <TextView
            android:id="@+id/tgl_rekap"
            android:paddingTop="0dp"
            android:paddingLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="17 sd 18/01/2020"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/blue"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/laporan_rekap"
            android:paddingTop="12dp"
            android:paddingLeft="245dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Laporan : Sudah"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/white"
            android:textSize="13dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>