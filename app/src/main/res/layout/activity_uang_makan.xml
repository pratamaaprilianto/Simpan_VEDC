<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.UangMakanActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/b_atasinfo"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_kembaliuangmakan"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_back"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textViewuangmakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/segoeuib"
        android:text="Info Uang Makan"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/bt_kembalibio"
        app:layout_constraintVertical_bias="0.89" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/segoeuib"
        android:text="Pilih Bulan"
        android:textColor="@color/blue"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/spin_bulanuangmakan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/segoeuib"
        android:text="Pilih Tahun"
        android:textColor="@color/blue"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/spin_tahunuangmakan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Spinner
        android:id="@+id/spin_tahunuangmakan"
        android:layout_width="160dp"
        android:layout_height="22dp"
        android:layout_marginTop="25dp"
        android:entries="@array/tahun"
        app:layout_constraintEnd_toEndOf="@+id/spin_bulanuangmakan"
        app:layout_constraintTop_toBottomOf="@+id/spin_bulanuangmakan" />

    <Spinner
        android:id="@+id/spin_bulanuangmakan"
        android:layout_width="160dp"
        android:layout_height="22dp"
        android:layout_marginEnd="50dp"
        android:entries="@array/bulan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_uangmakan"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="26dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin_tahunuangmakan">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_cardview">

            <ImageView
                android:id="@+id/iv_uangmakan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_uangmakan2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <TextView
                android:id="@+id/tv_uangmakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/segoeuib"
                android:text="Uang Makan"
                android:textColor="@color/blue"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_uangmakan"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/segoeui"
                android:text="Total kehadiran (hari)"
                android:textColor="@color/blue"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_uangmakan" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Rp @hari"
                android:textColor="@color/blue"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/textView26" />

            <TextView
                android:id="@+id/textView244"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Pajak %"
                android:textColor="@color/blue"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/textView27"
                app:layout_constraintTop_toBottomOf="@+id/textView27" />

            <TextView
                android:id="@+id/textView24s4"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Total uang makan"
                android:textColor="@color/blue"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/textView244"
                app:layout_constraintTop_toBottomOf="@+id/textView244" />

            --image keterangan

            <ImageView
                android:id="@+id/iv_totalkehadiran"
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/image_keterangan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/tv_uangmakan"/>

            <ImageView
                android:id="@+id/iv_hari"
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/image_keterangan"
                app:layout_constraintEnd_toEndOf="@+id/iv_totalkehadiran"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView27"
                app:layout_constraintTop_toBottomOf="@+id/iv_totalkehadiran"/>

            <ImageView
                android:id="@+id/iv_pajak"
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/image_keterangan"
                app:layout_constraintEnd_toEndOf="@+id/iv_hari"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView244"
                app:layout_constraintTop_toBottomOf="@+id/iv_hari"/>


            <ImageView
                android:id="@+id/iv_totaluangmakan"
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/bg_keterangan2"
                app:layout_constraintEnd_toEndOf="@+id/iv_pajak"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView24s4"
                app:layout_constraintTop_toBottomOf="@+id/iv_pajak"/>


            <TextView
                android:id="@+id/tv_totalkehadiran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeuib"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_totalkehadiran"
                app:layout_constraintEnd_toEndOf="@+id/iv_totalkehadiran"
                app:layout_constraintStart_toStartOf="@+id/iv_totalkehadiran"
                app:layout_constraintTop_toTopOf="@+id/iv_totalkehadiran" />

            <TextView
                android:id="@+id/tv_rphari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeuib"
                android:text="37.000"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_hari"
                app:layout_constraintEnd_toEndOf="@+id/iv_hari"
                app:layout_constraintStart_toStartOf="@+id/iv_hari"
                app:layout_constraintTop_toTopOf="@+id/iv_hari" />

            <TextView
                android:id="@+id/tv_pajak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeuib"
                android:text="5%"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_pajak"
                app:layout_constraintEnd_toEndOf="@+id/iv_pajak"
                app:layout_constraintStart_toStartOf="@+id/iv_pajak"
                app:layout_constraintTop_toTopOf="@+id/iv_pajak" />

            <TextView
                android:id="@+id/tv_totaluangmakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeuib"
                android:text="35.100"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_totaluangmakan"
                app:layout_constraintEnd_toEndOf="@+id/iv_totaluangmakan"
                app:layout_constraintStart_toStartOf="@+id/iv_totaluangmakan"
                app:layout_constraintTop_toTopOf="@+id/iv_totaluangmakan" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>